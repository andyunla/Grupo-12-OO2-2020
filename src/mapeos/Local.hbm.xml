<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="datos.Local" table="local">
    <id column="idLocal" name="idLocal" >
        <generator class="identity"/>
    </id>
    <property column="nombreLocal" name="nombreLocal" type="string"/>
    <property column="latitud" name="latitud" type="double"/>
    <property column="longitud" name="longitud" type="double"/>
    <property column="direccion" name="direccion" type="string"/>
    <property column="telefono" name="telefono" type="int"/>

    <one-to-one name="gerente" class="datos.Empleado"></one-to-one>

    <set name="listaLotes" cascade="save-update" table="lote" order-by="idLote asc" 
         inverse="true" lazy="true" fetch="select">
      <key column="idLote" not-null="true"/>
      <one-to-many class="datos.Lote"/>
    </set>
    <set name="listaEmpleados" cascade="save-update" table="empleado" order-by="idEmpleado asc" 
         inverse="true" lazy="true" fetch="select">
      <key column="idEmpleado" not-null="true"/>
      <one-to-many class="datos.Empleado"/>
    </set>
    <set name="listaChangos" cascade="save-update" table="chango" order-by="idChango asc" 
         inverse="true" lazy="true" fetch="select">
      <key column="idChango" not-null="true"/>
      <one-to-many class="datos.Chango"/>
    </set>
    <set name="listaFacturas" cascade="save-update" table="factura" order-by="idFactura asc" 
         inverse="true" lazy="true" fetch="select">
      <key column="idFactura" not-null="true"/>
      <one-to-many class="datos.Factura"/>
    </set>
  </class>
</hibernate-mapping>
