<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="datos.Cliente" table="cliente">
    <id column="idCliente" name="idCliente">
      <generator class="identity"/>
    </id>
    <property column="nombre" name="nombre" type="string"/>
    <property column="apellido" name="apellido" type="string"/>
    <property column="dni" name="dni" type="int"/>
    <property column="fechaDeNacimiento" name="fechaDeNacimiento" type="LocalDate"/>
    <joined-subclass name="datos.Cliente" table="cliente" >
      <key column="idCliente"/>
      <property column="email" name="email" type="string"/>
    </joined-subclass >
    <joined-subclass name="datos.Empleado" table="empleado" >
      <key column="idEmpleado"/>
      <property column="legajo" name="legajo" type="int"/>
      <property column="horarioDesde" name="horarioDesde" type="LocalTime"/>
      <property column="horarioHasta" name="horarioHasta" type="LocalTime"/>
      <property column="sueldoBasico" name="sueldoBasico" type="double"/>
    </joined-subclass >
  </class>
</hibernate-mapping>
