<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="datos.Factura" table="factura">
    <id column="idFactura" name="idFactura">
      <generator class="foreign">
        <param name="property">cliente</param>
      </generator>
    </id>
    <one-to-one name="cliente" class="datos.Cliente"></one-to-one>
    <one-to-one name="chango" class="datos.Chango"></one-to-one>
    <property column="fechaFactura" name="fechaFactura" type="LocalDate"/>
    <property column="costeTotal" name="costeTotal" type="double"/>
    <one-to-one name="empleado" class="datos.Empleado"></one-to-one>
  </class>
</hibernate-mapping>
